[user]
    name = Matthew Suozzo
[core]
    editor = vim
    excludesfile = ~/.gitignore
    autocrlf = input
[merge]
    tool = vimdiff
    keepBackup = false
[alias]
    ci = commit
    ch = checkout
    cim = commit -m
    st = status
    unstage = reset HEAD --
    clear = checkout --
    last = log -1 HEAD
    visual = !gitk
    l = log --graph --decorate --oneline -n20
    xl = log --graph --decorate --oneline
    d = log -p -n 1
[push]
    default = current
